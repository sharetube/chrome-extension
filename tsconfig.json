{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "paths": {
      "@app/*": ["content-script/app/*"],
      "@shared/*": ["content-script/shared/*"],
      "@widgets/*": ["content-script/widgets/*"],
      "@entities/*": ["content-script/entities/*"],
      "@tabs/*": ["content-script/tabs/*"],
      "@player/*": ["content-script/player/*"],
      "components/*": ["content-script/components/*"],
      "types/*": ["types/*"],
      "constants/*": ["constants/*"]
    }
  },
  "include": [
    "content-script/**/*.ts",
    "content-script/**/*.tsx",
    "background-script/**/*.ts",
    "background-script/**/*.tsx",
    "shared/**/*.ts",
    "constants/**/*.ts",
    "vite-env.d.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
