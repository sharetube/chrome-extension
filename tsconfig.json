{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@app/*": ["content-script/app/*"],
            "@shared/*": ["content-script/shared/*"],
            "@widgets/*": ["content-script/widgets/*"],
            "@entities/*": ["content-script/entities/*"],
            "@tabs/*": ["content-script/tabs/*"],
            "@player/*": ["content-script/player/*"]
        }
    },
    "include": [
        "src",
        "content-script/src",
        "content-script/entities",
        "content-script/main.tsx",
        "content-script/widgets",
        "content-script/tabs",
        "content-script/shared",
        "content-script/player"
    ],
    "references": [{ "path": "./tsconfig.node.json" }]
}
