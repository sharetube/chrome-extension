{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["content-script/app/*"],
      "@shared/*": ["content-script/shared/*"],
      "@widgets/*": ["content-script/widgets/*"],
      "@entities/*": ["content-script/entities/*"],
      "@tabs/*": ["content-script/tabs/*"],
      "@player/*": ["content-script/player/*"],
      "components/*": ["content-script/components/*"],
      "types/*": ["types/*"]
    }
  },
  "include": ["content-script/shared", "vite-env.d.ts", "types/user.ts"],
  "references": [{"path": "./tsconfig.node.json"}]
}
